@model BlogExpert.Mvc.ViewModels.AutorViewModel

@{
    ViewData["Title"] = "Excluir Autor";
}

<h1>@ViewData["Title"]</h1>

<vc:Summary></vc:Summary>

@if (Model != null && !string.IsNullOrEmpty(Model.Id.ToString()))
{
    <div>
        <h4>Esta ação será permanente!</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ativo)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <a class="btn btn-info" asp-action="Index">Voltar</a>
        </form>
    </div>
}
else
{
    <a class="btn btn-info" asp-action="Index">Voltar</a>
}
