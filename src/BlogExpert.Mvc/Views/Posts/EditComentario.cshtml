@model BlogExpert.Mvc.ViewModels.ComentarioViewModel

@{
    ViewData["Title"] = "Editar Comentário";
}

<h1>@ViewData["Title"]</h1>
<vc:Summary></vc:Summary>
<hr />

@if (Model != null && !string.IsNullOrEmpty(Model.Id.ToString()))
{
    <div class="row">
        <div class="col-md-10">
            <form asp-action="EditComentario">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PostId" />
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <textarea asp-for="Descricao" class="form-control focus" rows="4">@Model.Descricao</textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <b>Data:</b> @Model.DataCriacao
                    <br />
                    <b>Usuário:</b> @Model.EmailCriacao
                </div>
                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-primary" />
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@Model.PostId">Voltar</a>
                </div>
            </form>
        </div>
    </div>
    <hr />
    <h2>Post de edição do comentário</h2>
    <hr />
    <partial name="_ListaPost" model="@Model.Post" />
}
else
{
    <a class="btn btn-info" asp-action="Index">Voltar</a>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
