@model BlogExpert.Mvc.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Novo Post";
}

<h1>@ViewData["Title"]</h1>

<vc:Summary></vc:Summary>
<hr />

@if (ViewData.ModelState.ErrorCount == 0)
{
    <div class="row">
        <div class="col-md-10">
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <textarea asp-for="Descricao" class="form-control" rows="8">@Model.Descricao</textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Autor</label>
                    <div>@Html.DropDownList("AutoresIds")</div>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    <a class="btn btn-info" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <a class="btn btn-info" asp-action="Index">Voltar</a>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
